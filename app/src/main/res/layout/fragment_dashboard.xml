<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fcedd6"
    android:padding="16dp">

    <!-- Карточка занимает всё свободное пространство -->
    <FrameLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:padding="24dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/vecteezy_neumorphic_square_button_11888101"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/TasksBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeStepGranularity="2sp"
            android:maxLines="4"
        android:ellipsize="end"
        android:textStyle="bold|italic" />
    </FrameLayout>

    <!-- Кнопки -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:text="Назад"
        android:backgroundTint="#47322a"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/AnswerCard"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:text="Вопрос"
        android:backgroundTint="#47322a"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnForward"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Вперёд"
        android:backgroundTint="#47322a"
        android:textColor="#FFF" />

</LinearLayout>

    </LinearLayout>
